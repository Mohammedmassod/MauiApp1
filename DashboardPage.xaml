<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:chart="clr-namespace:Syncfusion.Maui.Charts;assembly=Syncfusion.Maui.Charts"
             x:Class="MauiApp1.DashboardPage">
    <VerticalStackLayout Padding="10" Spacing="20">
        <Label Text="لوحة التحكم" FontSize="24" HorizontalOptions="Center"/>
        <BoxView Color="LightGray" HeightRequest="2" HorizontalOptions="FillAndExpand"/>
        <Label Text="إحصاءات المبيعات" FontSize="18" HorizontalOptions="Start"/>
        <chart:SfCartesianChart x:Name="salesChartView" HeightRequest="200">
        </chart:SfCartesianChart>
    </VerticalStackLayout>
</ContentPage>
