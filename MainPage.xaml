<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:MauiApp1"
             x:Class="MauiApp1.MainPage"
             BackgroundColor="LightGray">
    <ContentPage.Content>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Content (Dashboard) -->
            <ContentView x:Name="ContentArea" Grid.Row="0" BackgroundColor="White">
                <!-- المحتوى الديناميكي سيتم عرضه هنا -->
            </ContentView>

            <!-- Footer as Navbar with Icons Only -->

            <StackLayout Grid.Row="1" BackgroundColor="#1E90FF" Padding="0" Orientation="Horizontal" HorizontalOptions="CenterAndExpand" VerticalOptions="End">
                <Button ImageSource="Resources/Images/home_icon.png" WidthRequest="70" BackgroundColor="Transparent" Clicked="OnHomeButtonClicked"/>
                <Button ImageSource="Resources/Images/settings_icon.png" WidthRequest="70"  BackgroundColor="Transparent" Clicked="OnSettingsButtonClicked"/>
                <Button ImageSource="Resources/Images/help_icon.png" WidthRequest="70" BackgroundColor="Transparent" Clicked="OnHelpButtonClicked"/>
                <Button ImageSource="Resources/Images/logout_icon.png" WidthRequest="70" BackgroundColor="Transparent" Clicked="OnLogoutButtonClicked"/>
            </StackLayout>
        </Grid>
    </ContentPage.Content>
</ContentPage>
