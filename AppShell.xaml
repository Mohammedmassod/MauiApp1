<Shell
    x:Class="MauiApp1.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MauiApp1"
    Shell.FlyoutBehavior="Disabled"
    Title="MauiApp1">

    <ShellContent
        Title="تسجيل الدخول"
        ContentTemplate="{DataTemplate local:LoginPage}"
        Route="LoginPage"
        />

    <ShellContent
        Title=""
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage"
        Icon="Resources/Images/hall_icon.png"
        />
    <!--<ShellContent
      Title="نظام إدارة الصالة"
      ContentTemplate="{DataTemplate local:MainPage}"
      Route="MainPage"
      Icon="Resources/Images/hall_icon.png"
      FlyoutIcon="flyout_icon.png"
      IsVisible="True"
      IsEnabled="True"      
      />-->

    <ShellContent
        Title="لوحة القيادة"
        ContentTemplate="{DataTemplate local:DashboardPage}"
        Route="DashboardPage"
        />

    <ShellContent
        Title="الإعدادات"
        ContentTemplate="{DataTemplate local:SettingsPage}"
        Route="SettingsPage"
        />

    <ShellContent
        Title="المساعدة"
        ContentTemplate="{DataTemplate local:HelpPage}"
        Route="HelpPage"
        />
    <ShellContent
        Title="تسجيل الدخول"
        ContentTemplate="{DataTemplate local:CreateAccountPage}"
        Route="CreateAccountPage"
        />

</Shell>
